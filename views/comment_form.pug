extends layout

block content

  h1 #{title}: #{post.title}

  form(method='POST' action='')
      div.form-group
      label(for='text') Text:
      input#text.form-control(type='text', placeholder='' name='text' required='true' value=(undefined===comment ? '' : comment.text) )
      label(for='owner') Your name:
      input#owner.form-control(type='text', placeholder='' name='owner' required='true' value=(undefined===comment ? '' : comment.owner) )
      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg